{
	"compilerOptions": {
		"target": "ES2024",
		"module": "commonjs",
		"lib": ["ES2024"],
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["index.ts", "lib/**/*.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.js"]
}
